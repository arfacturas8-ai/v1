{
  "name": "@cryb/api",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:load": "artillery run tests/load/*.yml",
    "test:security": "npm run test:security:zap && npm run test:security:audit",
    "test:security:zap": "node tests/security/zap-scanner.js",
    "test:security:audit": "npm audit --audit-level=moderate",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@cryb/auth": "workspace:*",
    "@cryb/database": "workspace:*",
    "@cryb/shared": "workspace:*",
    "@cryb/web3": "workspace:*",
    "@elastic/elasticsearch": "^9.1.1",
    "@fastify/cors": "^10.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.2.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "axios": "^1.11.0",
    "bad-words": "^4.0.0",
    "bull": "^4.16.5",
    "bullmq": "^5.35.2",
    "compromise": "^14.12.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.2.2",
    "google-auth-library": "^10.3.0",
    "ioredis": "^5.4.2",
    "leo-profanity": "^1.7.0",
    "livekit-server-sdk": "^2.13.3",
    "lru-cache": "^11.2.1",
    "minio": "^8.0.1",
    "natural": "^8.0.1",
    "openai": "^4.73.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.1",
    "sentiment": "^5.0.2",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.10",
    "@types/supertest": "^6.0.2",
    "artillery": "^2.0.21",
    "jest": "^29.7.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}