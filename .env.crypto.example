# ===================================
# CRYB Platform - Crypto/Web3 Environment Variables
# ===================================
# Copy this file to .env and fill in your actual API keys

# ===================================
# Blockchain RPC Providers
# ===================================

# Infura (Primary Provider)
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# Alchemy (Backup Provider)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Custom RPC URLs (Optional - overrides default provider URLs)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ===================================
# NFT Data Providers
# ===================================

# Moralis (NFT metadata and ownership)
MORALIS_API_KEY=your_moralis_api_key_here

# OpenSea API (Optional - for enhanced NFT data)
OPENSEA_API_KEY=your_opensea_api_key_here

# ===================================
# Crypto Payment Providers
# ===================================

# Transak (Fiat to Crypto)
TRANSAK_API_KEY=your_transak_api_key_here
TRANSAK_API_SECRET=your_transak_api_secret_here
TRANSAK_WEBHOOK_SECRET=your_transak_webhook_secret_here
TRANSAK_BASE_URL=https://api.transak.com

# MoonPay (Alternative payment provider)
MOONPAY_API_KEY=your_moonpay_api_key_here
MOONPAY_SECRET_KEY=your_moonpay_secret_key_here
MOONPAY_WEBHOOK_SECRET=your_moonpay_webhook_secret_here

# ===================================
# Market Data
# ===================================

# CoinGecko (Crypto prices)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Bitcoin Provider
BLOCKCYPHER_TOKEN=your_blockcypher_token_here

# ===================================
# Wallet Connection
# ===================================

# WalletConnect
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ===================================
# Security & Rate Limiting
# ===================================

# JWT Secret for Web3 auth
WEB3_JWT_SECRET=your_secure_jwt_secret_for_web3_here

# Rate limiting (requests per minute)
WEB3_RATE_LIMIT_RPM=100

# CORS origins for Web3 endpoints
WEB3_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ===================================
# Application URLs
# ===================================

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:3000

# API Base URL
API_BASE_URL=http://localhost:3001

# Webhook base URL (must be publicly accessible)
WEBHOOK_BASE_URL=https://your-domain.com/api/webhooks

# ===================================
# Development Settings
# ===================================

# Environment
NODE_ENV=development

# Enable debug logging for Web3
WEB3_DEBUG=true

# Use testnet providers (set to true for development)
USE_TESTNETS=false

# Cache settings
WEB3_CACHE_TTL=300000
WEB3_CACHE_MAX_SIZE=1000

# ===================================
# Monitoring & Analytics
# ===================================

# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Analytics
ANALYTICS_API_KEY=your_analytics_key_here

# ===================================
# Database Configuration
# ===================================

# These should match your main database config
DATABASE_URL=postgresql://username:password@localhost:5432/cryb_platform
REDIS_URL=redis://localhost:6379

# ===================================
# IMPORTANT SECURITY NOTES
# ===================================

# 1. Never commit this file with real API keys to version control
# 2. Use different keys for development, staging, and production
# 3. Rotate keys regularly
# 4. Monitor API usage and set up alerts for unusual activity
# 5. Use environment-specific webhook URLs
# 6. Enable IP whitelisting where possible
# 7. Use strong JWT secrets (64+ characters)
# 8. Set appropriate CORS origins for production

