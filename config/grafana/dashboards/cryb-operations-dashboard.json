{
  "dashboard": {
    "id": null,
    "title": "CRYB Platform - Operations Dashboard",
    "tags": ["cryb", "operations", "infrastructure", "logs"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
        "collapsed": false
      },
      {
        "id": 2,
        "title": "Service Status",
        "type": "stat",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
        "targets": [
          {
            "expr": "up{job=~\"cryb-api|cryb-grafana|cryb-prometheus|cryb-loki\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            },
            "unit": "short",
            "mappings": [
              { "options": { "0": { "text": "DOWN", "color": "red" } } },
              { "options": { "1": { "text": "UP", "color": "green" } } }
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 3,
        "title": "Container Health",
        "type": "graph",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
        "targets": [
          {
            "expr": "count by (container_label_com_docker_compose_service) (container_last_seen{container_label_com_docker_compose_service!=\"\"})",
            "legendFormat": "{{container_label_com_docker_compose_service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Containers",
            "show": true
          },
          {
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "bars": false,
        "stack": false,
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 4,
        "title": "Alert Summary",
        "type": "table",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "alertname" },
              "properties": [
                { "id": "displayName", "value": "Alert" },
                { "id": "custom.width", "value": 200 }
              ]
            },
            {
              "matcher": { "id": "byName", "options": "severity" },
              "properties": [
                { "id": "displayName", "value": "Severity" },
                { "id": "custom.width", "value": 100 }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true
        }
      },
      {
        "id": 5,
        "title": "Infrastructure Metrics",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
        "collapsed": false
      },
      {
        "id": 6,
        "title": "CPU Usage by Service",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container_label_com_docker_compose_service!=\"\"}[5m]) * 100",
            "legendFormat": "{{container_label_com_docker_compose_service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "show": true,
            "min": 0,
            "max": 100
          },
          {
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "bars": false,
        "stack": false,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true
        }
      },
      {
        "id": 7,
        "title": "Memory Usage by Service",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
        "targets": [
          {
            "expr": "container_memory_usage_bytes{container_label_com_docker_compose_service!=\"\"} / container_spec_memory_limit_bytes * 100",
            "legendFormat": "{{container_label_com_docker_compose_service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory %",
            "show": true,
            "min": 0,
            "max": 100
          },
          {
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "bars": false,
        "stack": false,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true
        }
      },
      {
        "id": 8,
        "title": "Log Analysis",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
        "collapsed": false
      },
      {
        "id": 9,
        "title": "Log Volume by Service",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 },
        "targets": [
          {
            "expr": "sum by (service) (rate(loki_ingester_lines_received_total[5m]))",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Lines/sec",
            "show": true
          },
          {
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "bars": false,
        "stack": true,
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 10,
        "title": "Error Logs",
        "type": "logs",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 19 },
        "targets": [
          {
            "expr": "{level=~\"error|ERROR|Error\"} |= \"\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 11,
        "title": "Database Operations",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
        "collapsed": false
      },
      {
        "id": 12,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 28 },
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "show": true
          },
          {
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "bars": false,
        "stack": false,
        "legend": {
          "show": true
        }
      },
      {
        "id": 13,
        "title": "Database Query Performance",
        "type": "graph",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 28 },
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_fetched[5m])",
            "legendFormat": "Tuples Fetched/sec",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_inserted[5m])",
            "legendFormat": "Tuples Inserted/sec",
            "refId": "B"
          },
          {
            "expr": "rate(pg_stat_database_tup_updated[5m])",
            "legendFormat": "Tuples Updated/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Operations/sec",
            "show": true
          },
          {
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "bars": false,
        "stack": false,
        "legend": {
          "show": true
        }
      },
      {
        "id": 14,
        "title": "Cache Performance",
        "type": "graph",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 28 },
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m])",
            "legendFormat": "Cache Hits/sec",
            "refId": "A"
          },
          {
            "expr": "rate(redis_keyspace_misses_total[5m])",
            "legendFormat": "Cache Misses/sec",
            "refId": "B"
          },
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m])) * 100",
            "legendFormat": "Hit Rate %",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Operations/sec",
            "show": true
          },
          {
            "label": "Hit Rate %",
            "show": true,
            "min": 0,
            "max": 100
          }
        ],
        "xAxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "bars": false,
        "stack": false,
        "legend": {
          "show": true
        }
      },
      {
        "id": 15,
        "title": "Network & Security",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 },
        "collapsed": false
      },
      {
        "id": 16,
        "title": "Network Traffic",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 37 },
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m]) * 8",
            "legendFormat": "Inbound ({{device}})",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[5m]) * 8",
            "legendFormat": "Outbound ({{device}})",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Bits/sec",
            "show": true
          },
          {
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "points": false,
        "bars": false,
        "stack": false,
        "legend": {
          "show": true
        }
      },
      {
        "id": 17,
        "title": "Security Events",
        "type": "logs",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 37 },
        "targets": [
          {
            "expr": "{job=\"security\"} |= \"failed\" or {job=\"security\"} |= \"error\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 18,
        "title": "Deployment & Maintenance",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 45 },
        "collapsed": false
      },
      {
        "id": 19,
        "title": "Deployment Events",
        "type": "logs",
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 46 },
        "targets": [
          {
            "expr": "{job=\"deployment\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 20,
        "title": "Service Restart Events",
        "type": "stat",
        "gridPos": { "h": 6, "w": 12, "x": 12, "y": 46 },
        "targets": [
          {
            "expr": "changes(container_start_time_seconds[1h])",
            "legendFormat": "{{container_label_com_docker_compose_service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 3 }
              ]
            },
            "unit": "short",
            "displayName": "Restarts (1h)"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "value": "prometheus",
            "text": "prometheus"
          }
        },
        {
          "name": "loki_datasource",
          "type": "datasource",
          "query": "loki",
          "current": {
            "value": "loki",
            "text": "loki"
          }
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job)",
          "current": {
            "value": "all",
            "text": "All"
          },
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "loki",
          "enable": true,
          "expr": "{job=\"deployment\"}",
          "iconColor": "blue",
          "textFormat": "{{message}}"
        },
        {
          "name": "Alerts",
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "textFormat": "{{alertname}}: {{instance}}"
        }
      ]
    }
  },
  "folderId": 0,
  "overwrite": true
}