# CRYB Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@localhost:5432/YOUR_DB_NAME
REDIS_URL=redis://localhost:6379

# API Keys - Backend
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-min-32-chars

# AWS Configuration (Free Tier)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cryb-platform-assets

# Email Service (SendGrid - $15/month)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Blockchain/Web3 Configuration

## Ethereum Provider (Infura - FREE tier: 100k requests/month)
## Get at: https://infura.io/dashboard
INFURA_PROJECT_ID=your-infura-project-id
INFURA_PROJECT_SECRET=your-infura-project-secret
INFURA_NETWORK=mainnet # or goerli for testnet

## Alternative: Alchemy (FREE tier: 300M compute units/month)
## Get at: https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your-alchemy-api-key
ALCHEMY_NETWORK=eth-mainnet # or eth-goerli

## Bitcoin API (Block Cypher - FREE tier: 5k calls/month)
## Get at: https://accounts.blockcypher.com/
BLOCKCYPHER_TOKEN=your-blockcypher-token

## NFT Management (Moralis - FREE tier available)
## Get at: https://admin.moralis.io/
MORALIS_API_KEY=your-moralis-api-key

## Market Data (CoinGecko - FREE tier: 10-50 calls/min)
## Get at: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=your-coingecko-api-key # Optional for higher rate limits

## Payment Processing (Transak - No setup fees)
## Get at: https://dashboard.transak.com/
TRANSAK_API_KEY=your-transak-api-key
TRANSAK_ENVIRONMENT=staging # or production
TRANSAK_WEBHOOK_SECRET=your-webhook-secret

## WalletConnect (FREE)
## Get at: https://cloud.walletconnect.com/
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

## Sign-In With Ethereum (SIWE)
SIWE_DOMAIN=localhost:3000
SIWE_STATEMENT=Sign in to CRYB Platform

# WebRTC/Real-time
JANUS_URL=ws://localhost:8188
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=turnuser
TURN_PASSWORD=turnpassword

# Socket.io
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring and Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_MAX_BREADCRUMBS=100
SENTRY_ENABLE_IN_DEVELOPMENT=false

# Prometheus Metrics
PROMETHEUS_METRICS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics
PROMETHEUS_ENABLED=true

# Jaeger Tracing (Optional)
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=cryb-api
JAEGER_ENABLED=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Development
NODE_ENV=development
PORT=4000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_SOCKET_URL=ws://localhost:4000

# Production (uncomment for production)
# NODE_ENV=production
# PORT=4000
# NEXT_PUBLIC_API_URL=https://api.cryb.com
# NEXT_PUBLIC_SOCKET_URL=wss://api.cryb.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4

# Community Defaults
DEFAULT_MAX_CHANNELS_PER_SERVER=50
DEFAULT_MAX_MEMBERS_PER_SERVER=100000
DEFAULT_MAX_ROLES_PER_SERVER=250

# Clockify Integration (for tracking development time)
CLOCKIFY_API_KEY=ODc5M2U0ODktMmM0Yy00ZTI5LWI2MDktNDg3MzUxZmQ1Zjll
CLOCKIFY_WORKSPACE_ID=your-workspace-id
CLOCKIFY_PROJECT_ID=your-project-id