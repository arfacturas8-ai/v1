# Docker Development Environment Configuration
# Copy this to .env for Docker development

# Database (PostgreSQL with TimescaleDB)
DATABASE_URL="postgresql://cryb_user:cryb_password@localhost:5432/cryb?schema=public"

# Redis
REDIS_URL="redis://:cryb_redis_password@localhost:6379/0"
REDIS_PASSWORD="cryb_redis_password"

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX="cryb"

# MinIO (S3-compatible storage for local development)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin123"
S3_BUCKET="cryb-media"
S3_REGION="us-east-1"
S3_USE_PATH_STYLE=true

# JWT Secrets
JWT_SECRET="dev-jwt-secret-change-in-production-$(openssl rand -hex 32)"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"
REFRESH_TOKEN_SECRET="dev-refresh-secret-change-in-production-$(openssl rand -hex 32)"

# Server Configuration
NODE_ENV="development"
PORT="3001"
API_PORT="3001"
WEB_PORT="3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Web3 Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"
INFURA_PROJECT_ID="your-infura-project-id"
ALCHEMY_API_KEY="your-alchemy-api-key"
MORALIS_API_KEY="your-moralis-api-key"
ETHERSCAN_API_KEY="your-etherscan-api-key"

# RabbitMQ (if using instead of BullMQ)
RABBITMQ_URL="amqp://cryb:cryb_password@localhost:5672"

# Monitoring
PROMETHEUS_PORT="9090"
GRAFANA_PORT="3002"
GRAFANA_USER="admin"
GRAFANA_PASSWORD="admin123"
JAEGER_PORT="16686"

# Development Tools
PGADMIN_EMAIL="admin@cryb.ai"
PGADMIN_PASSWORD="admin123"
REDIS_COMMANDER_PORT="8081"

# Email Service (SendGrid)
SENDGRID_API_KEY=""
EMAIL_FROM="noreply@cryb.ai"

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Error Tracking (Sentry)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Analytics
GOOGLE_ANALYTICS_ID=""
MIXPANEL_TOKEN=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="100"

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Session
SESSION_SECRET="dev-session-secret-$(openssl rand -hex 32)"
SESSION_MAX_AGE="86400000"

# File Upload
MAX_FILE_SIZE="104857600"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav"

# Voice/Video (WebRTC)
TURN_SERVER_URL=""
TURN_SERVER_USERNAME=""
TURN_SERVER_PASSWORD=""
STUN_SERVER_URL="stun:stun.l.google.com:19302"

# Production URLs (for reference)
PRODUCTION_API_URL="https://api.cryb.ai"
PRODUCTION_WS_URL="wss://ws.cryb.ai"
PRODUCTION_APP_URL="https://cryb.ai"

# Feature Flags
ENABLE_WEB3=true
ENABLE_VOICE_CHAT=true
ENABLE_VIDEO_CHAT=true
ENABLE_SCREEN_SHARE=true
ENABLE_ANALYTICS=false
ENABLE_SENTRY=false
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL="debug"
LOG_FORMAT="json"

# Security
BCRYPT_ROUNDS="12"
ENCRYPTION_KEY="dev-encryption-key-$(openssl rand -hex 32)"

# OAuth Providers
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""