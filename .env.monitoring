# ==============================================
# CRYB PLATFORM - ENHANCED MONITORING ENVIRONMENT
# ==============================================

# Project Configuration
COMPOSE_PROJECT_NAME=cryb-monitoring

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=cryb_monitoring_admin_2024
GRAFANA_SERVER_ROOT_URL=https://monitoring.cryb.ai/
GRAFANA_SECURITY_SECRET_KEY=cryb_grafana_secret_key_2024

# Prometheus Configuration
PROMETHEUS_RETENTION=30d
PROMETHEUS_STORAGE_TSDB_RETENTION_SIZE=10GB
PROMETHEUS_WEB_EXTERNAL_URL=https://prometheus.cryb.ai/

# Loki Configuration
LOKI_RETENTION=720h
LOKI_MAX_QUERY_PARALLELISM=32

# Alertmanager Configuration
ALERT_EMAIL_FROM=alerts@cryb.ai
ALERT_EMAIL_TO=devops@cryb.ai
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com:587
ALERT_EMAIL_SMTP_USERNAME=alerts@cryb.ai
ALERT_EMAIL_SMTP_PASSWORD=your-app-password

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL_MONITORING=#monitoring
SLACK_CHANNEL_CRITICAL=#critical-alerts
SLACK_CHANNEL_SECURITY=#security-alerts

# PagerDuty Integration (Optional)
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key
PAGERDUTY_OUTAGE_KEY=your-pagerduty-outage-key
PAGERDUTY_REVENUE_KEY=your-pagerduty-revenue-key

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# Business Metrics Configuration
BUSINESS_METRICS_ENABLED=true
BUSINESS_METRICS_INTERVAL_MINUTES=5
USER_ENGAGEMENT_TRACKING=detailed

# Security Configuration
MONITORING_AUTH_ENABLED=true
MONITORING_API_KEY=cryb_monitoring_api_key_2024

# Performance Tuning
PROMETHEUS_QUERY_MAX_CONCURRENCY=20
GRAFANA_DATABASE_TYPE=postgres
GRAFANA_DATABASE_HOST=cryb-postgres-optimized
GRAFANA_DATABASE_NAME=grafana
GRAFANA_DATABASE_USER=grafana_user
GRAFANA_DATABASE_PASSWORD=grafana_password

# External Services
EXTERNAL_API_URL=https://api.cryb.ai
EXTERNAL_WEB_URL=https://cryb.ai
EXTERNAL_LIVEKIT_URL=https://livekit.cryb.ai

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30