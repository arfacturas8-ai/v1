# ==============================================
# CRYB PLATFORM - ENVIRONMENT CONFIGURATION
# ==============================================
#
# Copy this file to .env and fill in your values
# Command: cp .env.example .env
# DO NOT commit .env to version control!
#

# ==============================================
# REQUIRED FOR DEPLOYMENT
# ==============================================

# Deployer Wallet Private Key
# Export from MetaMask: Account Details -> Export Private Key
# ⚠️  NEVER share or commit this key!
# ⚠️  Use a dedicated deployment wallet, not your main wallet
PRIVATE_KEY=your_private_key_here

# Alternative variable names (for compatibility)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here
TREASURY_PRIVATE_KEY=your_treasury_private_key_here
EMERGENCY_ADMIN_PRIVATE_KEY=your_emergency_admin_private_key_here

# ==============================================
# REQUIRED: RPC PROVIDER
# ==============================================

# Alchemy API Key (Recommended)
# Get from: https://www.alchemy.com/
# Create app: Ethereum -> Sepolia (or your target network)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# OR use Infura (Alternative)
INFURA_API_KEY=your_infura_api_key_here

# ==============================================
# REQUIRED FOR VERIFICATION
# ==============================================

# Etherscan API Key
# Get from: https://etherscan.io/myapikey
# Used to verify contracts on Etherscan
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ==============================================
# OPTIONAL - ALTERNATIVE RPC ENDPOINTS
# ==============================================

# Sepolia Testnet (uses ALCHEMY_API_KEY by default)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# Ethereum Mainnet (for production deployment)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# Goerli Testnet (deprecated, but included for reference)
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# ==============================================
# OPTIONAL - LAYER 2 NETWORKS
# ==============================================

# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Polygon Mumbai (testnet)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Arbitrum
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Arbitrum Goerli (testnet)
ARBITRUM_GOERLI_RPC_URL=https://goerli-rollup.arbitrum.io/rpc

# Optimism
OPTIMISM_RPC_URL=https://mainnet.optimism.io
OPTIMISTIC_ETHERSCAN_API_KEY=your_optimistic_etherscan_api_key_here

# Optimism Goerli (testnet)
OPTIMISM_GOERLI_RPC_URL=https://goerli.optimism.io

# Binance Smart Chain
BSC_RPC_URL=https://bsc-dataseed1.binance.org
BSCSCAN_API_KEY=your_bscscan_api_key_here

# BSC Testnet
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# ==============================================
# OPTIONAL - GAS REPORTING & ANALYTICS
# ==============================================

# CoinMarketCap API Key (for gas cost USD reporting)
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Enable gas reporting in tests
# Set to "true" to enable detailed gas reports
REPORT_GAS=false

# Deployment Configuration
DEFAULT_GAS_PRICE=20000000000
DEFAULT_GAS_LIMIT=8000000

# Multi-sig Configuration
MULTISIG_OWNERS=0x...,0x...,0x...
MULTISIG_THRESHOLD=3

# Token Distribution Addresses
TEAM_WALLET=0x1234567890123456789012345678901234567890
INVESTOR_WALLET=0x2345678901234567890123456789012345678901
LIQUIDITY_WALLET=0x3456789012345678901234567890123456789012
COMMUNITY_WALLET=0x4567890123456789012345678901234567890123
RESERVE_WALLET=0x5678901234567890123456789012345678901234
FEE_RECIPIENT=0x6789012345678901234567890123456789012345
MODERATOR_POOL=0x7890123456789012345678901234567890123456

# NFT Collection Configuration
NFT_NAME=CRYB Genesis Collection
NFT_SYMBOL=CRYB
NFT_PLACEHOLDER_URI=https://api.cryb.ai/metadata/placeholder.json
NFT_BASE_URI=https://api.cryb.ai/metadata/
ROYALTY_RECIPIENT=0x6789012345678901234567890123456789012345

# Contract Verification
VERIFY_CONTRACTS=true
VERIFY_DELAY=10000

# Testing Configuration
ENABLE_GAS_REPORTER=true
ENABLE_COVERAGE=true
PARALLEL_TESTS=true

# Security Configuration
ENABLE_OPTIMIZER=true
OPTIMIZER_RUNS=200
VIA_IR=false

# IPFS Configuration (for NFT metadata)
IPFS_PROJECT_ID=your_infura_ipfs_project_id
IPFS_PROJECT_SECRET=your_infura_ipfs_project_secret
IPFS_GATEWAY=https://ipfs.infura.io/ipfs/

# Oracle Configuration (for price feeds)
CHAINLINK_ETH_USD_FEED=0x5f4eC3Df9cbd43714FE2740f5E3616155c5b8419
CHAINLINK_MATIC_USD_FEED=0xAB594600376Ec9fD91F8e885dADF0CE036862dE0

# Layer 2 Configuration
POLYGON_CHILD_CHAIN_MANAGER=0xA6FA4fB5f76172d178d61B04b0ecd319C5d1C0aa
ARBITRUM_BRIDGE=0x4Dbd4fc535Ac27206064B68FfCf827b0A60BAB3f
OPTIMISM_BRIDGE=0x25ace71c97B33Cc4729CF772ae268934F7ab5fA1

# Development Settings
NODE_ENV=development
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# ENABLE_OPTIMIZER=true
# OPTIMIZER_RUNS=999999

# ==============================================
# QUICK START CHECKLIST
# ==============================================
#
# For Sepolia Testnet Deployment:
#
# 1. ✅ Get Alchemy API key from https://www.alchemy.com/
# 2. ✅ Export private key from MetaMask
# 3. ✅ Get Sepolia ETH from faucets:
#       - https://sepoliafaucet.com/
#       - https://www.alchemy.com/faucets/ethereum-sepolia
#       - https://sepolia-faucet.pk910.de/
# 4. ✅ Get Etherscan API key from https://etherscan.io/myapikey
# 5. ✅ Fill in PRIVATE_KEY, ALCHEMY_API_KEY, ETHERSCAN_API_KEY
# 6. ✅ Save as .env (not .env.example)
# 7. ✅ Run: npm run check
# 8. ✅ Run: npm run deploy:sepolia
