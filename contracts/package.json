{
  "name": "cryb-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for CRYB Platform",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "check": "node scripts/check-prerequisites.js",
    "check-wallet": "node scripts/check-wallet.js",
    "deploy:sepolia": "bash scripts/deploy-all-sepolia.sh",
    "deploy:localhost": "hardhat run scripts/deploy-all-contracts.js --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy-all-contracts.js --network goerli",
    "deploy:mumbai": "hardhat run scripts/deploy-all-contracts.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy-all-contracts.js --network polygon",
    "deploy:ethereum": "hardhat run scripts/deploy-all-contracts.js --network ethereum",
    "verify:sepolia": "node scripts/verify-all-contracts.js sepolia",
    "verify:goerli": "node scripts/verify-all-contracts.js goerli",
    "verify:mumbai": "node scripts/verify-all-contracts.js mumbai",
    "verify:polygon": "node scripts/verify-all-contracts.js polygon",
    "verify:ethereum": "node scripts/verify-all-contracts.js ethereum",
    "update-frontend": "node scripts/update-frontend-addresses.js",
    "consolidate": "node scripts/consolidate-deployments.js",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "flatten": "hardhat flatten",
    "slither": "slither .",
    "mythril": "myth analyze contracts/CRYB.sol",
    "setup:env": "cp .env.example .env"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "cryb",
    "token",
    "nft",
    "defi",
    "web3"
