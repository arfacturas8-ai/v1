{
  "name": "@cryb/database",
  "version": "0.0.1",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node seed.ts",
    "db:seed:small": "ts-node seed.ts --users 20 --servers 3 --channelsPerServer 5 --messagesPerChannel 50",
    "db:seed:large": "ts-node seed.ts --users 500 --servers 20 --channelsPerServer 25 --messagesPerChannel 500",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "db:timescale": "psql $DATABASE_URL -f timescale-setup.sql",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "prisma": "^5.22.0",
    "typescript": "^5.6.3",
    "@types/node": "^20.17.12",
    "@faker-js/faker": "^8.4.1",
    "ts-node": "^10.9.2"
  }
}