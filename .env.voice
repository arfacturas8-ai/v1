# Database Configuration (required for voice state management)
DATABASE_URL=postgresql://postgres:password@localhost:5432/cryb_dev?schema=public

# Redis Configuration (optional but recommended for session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=cryb_redis_password

# Voice Feature Flags
VOICE_ENABLED=true
VIDEO_ENABLED=true
SCREEN_SHARE_ENABLED=true
VOICE_RECORDING_ENABLED=false

# Performance Configuration
VOICE_MAX_PARTICIPANTS_PER_CHANNEL=100
VOICE_CONNECTION_TIMEOUT=30000
VOICE_RECONNECT_MAX_ATTEMPTS=5

# Security Configuration  
VOICE_REQUIRE_AUTHENTICATION=true
VOICE_RATE_LIMIT_PER_MINUTE=30

# Monitoring Configuration
VOICE_METRICS_ENABLED=true
VOICE_LOGGING_LEVEL=info

